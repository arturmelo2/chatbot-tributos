# =============================================================================
# MANIFEST.in - Chatbot de Tributos
# =============================================================================
# Inclui arquivos não-Python no pacote distribuível

include README.md
include LICENSE
include CONTRIBUTING.md
include ARCHITECTURE.md
include .env.example
include requirements.txt
include requirements-dev.txt
include pyproject.toml

# Docker files
include dockerfile
include .dockerignore
include compose.yml

# Workflows n8n
recursive-include n8n/workflows *.json

# Base de conhecimento (documentos)
recursive-include rag/data *.md *.txt *.pdf

# Scripts PowerShell
recursive-include scripts *.ps1

# GitHub Actions
recursive-include .github/workflows *.yml

# Excluir arquivos desnecessários
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.log
