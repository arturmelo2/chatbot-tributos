# =============================================================================
# Chatbot de Tributos - Prefeitura Municipal de Nova Trento/SC
# =============================================================================

# -----------------------------------------------------------------------------
# Provedor de LLM (Language Model)
# -----------------------------------------------------------------------------
# Opções: 'openai', 'grok', 'xai', 'groq'
LLM_PROVIDER=groq

# Modelo específico (deixe vazio para usar o padrão do provedor)
# Recomendações:
#   OpenAI: gpt-4.1 (compatível) | o4-mini (mais novo)
#   Grok/xAI: grok-4-fast-reasoning (padrão)
#   Groq: llama-3.3-70b-versatile (padrão)
LLM_MODEL=llama-3.3-70b-versatile

# -----------------------------------------------------------------------------
# API Keys (preencha apenas a do provedor escolhido)
# -----------------------------------------------------------------------------
# OpenAI API Key (se LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-xxxxx

# xAI API Key (se LLM_PROVIDER=grok ou xai)
XAI_API_KEY=xai-xxxxx

# Groq API Key (se LLM_PROVIDER=groq)
GROQ_API_KEY=gsk_xxxxx

# HuggingFace API Key (opcional, para modelos privados)
HUGGINGFACE_API_KEY=hf_xxxxx

# -----------------------------------------------------------------------------
# Embeddings e Base Vetorial (RAG)
# -----------------------------------------------------------------------------
# Modelo de embeddings HuggingFace
# Recomendados:
#   - sentence-transformers/all-MiniLM-L6-v2 (rápido, leve)
#   - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (multilíngue)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Diretório onde o Chroma armazena os vetores
# No Docker: /app/chroma_data
# No desenvolvimento local: ./chroma_data
CHROMA_DIR=/app/chroma_data

# -----------------------------------------------------------------------------
# Fluxo de Atendimento
# -----------------------------------------------------------------------------
# Caminho para o JSON do fluxo de atendimento
# No Docker: /app/fluxo_novatrento.json
# No desenvolvimento local: ./fluxo_novatrento.json
FLOW_JSON_PATH=fluxo_novatrento.json

# -----------------------------------------------------------------------------
# WAHA (WhatsApp HTTP API) - Opcional
# -----------------------------------------------------------------------------
# URL da API WAHA
WAHA_API_URL=http://waha:3000

# API Key FIXA do WAHA (persistente entre restarts)
# NÃO mude este valor para manter credenciais consistentes
WAHA_API_KEY=tributos_nova_trento_2025_api_key_fixed

# Sessão/instância WAHA
WAHA_SESSION=default

# Timeout para chamadas WAHA (segundos)
WAHA_TIMEOUT=10

# -----------------------------------------------------------------------------
# Aplicação
# -----------------------------------------------------------------------------
# Porta da aplicação
PORT=5000

# Ambiente (development, production)
ENVIRONMENT=production

# Debug mode (true, false)
DEBUG=false
